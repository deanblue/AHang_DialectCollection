<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableRow
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_black"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cyan"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_red"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/red"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/orange"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_yellow"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/yellow"
            android:layout_weight="0.3"/>
    </TableRow>
    <TableRow
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_blue"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/blue"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_green"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/green"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_purple"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/purple"
            android:layout_weight="0.3"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_dialog_pink"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pink"
            android:layout_weight="0.3"/>
    </TableRow>

</TableLayout>